<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/shape_popupwindow_voice">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <LinearLayout
            android:id="@+id/ll_speak_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/item_margin_top"
            android:layout_marginBottom="@dimen/item_margin_bottom"
            android:layout_marginLeft="@dimen/item_margin_left"
            android:layout_marginRight="@dimen/item_margin_right"
            android:layout_gravity="center"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/speak_title"
                android:textSize="@dimen/msg_title_size"
                android:textColor="@color/colorDarkBlue"/>

            <ImageView
                android:layout_marginTop="@dimen/item_margin_top"
                android:layout_width="@dimen/progress_bar_width"
                android:layout_height="@dimen/progress_bar_width"
                android:src="@drawable/animlist_popupwindow_voice"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_speak_err"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/item_margin_top"
            android:layout_marginBottom="@dimen/item_margin_bottom"
            android:layout_gravity="center"
            android:gravity="center"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_msg_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/err_msg_font_size"
                android:textColor="@color/colorDarkBlue"/>

            <ImageView
                android:id="@+id/iv_msg_image"
                android:layout_marginTop="@dimen/item_margin_top"
                android:layout_width="@dimen/progress_bar_width"
                android:layout_height="@dimen/progress_bar_width"/>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/fl_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/item_margin_top"
            android:layout_gravity="center"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/recognize_title"
                android:textColor="@color/colorWhite"/>
            <ProgressBar
                android:id="@+id/pbar_voice"
                android:layout_width="@dimen/progress_bar_width"
                android:layout_height="@dimen/progress_bar_height"
                android:layout_below="@+id/tv_voice_info"
                android:indeterminate="true"
                android:indeterminateDrawable="@drawable/rotate_progressbar" />
        </FrameLayout>
    </FrameLayout>
</LinearLayout>