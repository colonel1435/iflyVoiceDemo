<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@color/colorSilver"
    card_view:cardCornerRadius="10dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ref"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_textview_padding"
            android:gravity="center"
            android:text="识别文本"
            android:textColor="@color/colorGrey" />
        <TextView
            android:id="@+id/tv_ref_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/default_textview_padding"
            android:text="afdjfaljdf"
            android:textColor="@color/colorWhite" />

        <com.example.iflyvoicedemo.view.DashLineView
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/tv_recog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/default_textview_padding"
            android:gravity="center"
            android:text="识别结果"
            android:textColor="@color/colorGrey" />
        <TextView
            android:id="@+id/tv_recog_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="@dimen/default_textview_padding"
            android:text="afdjfaljdf"
            android:textColor="@color/colorWhite" />

        <com.example.iflyvoicedemo.view.DashLineView
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:background="@drawable/shape_dash_line"
            android:layerType="software"
            android:orientation="horizontal" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_err"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:padding="@dimen/default_textview_padding"
                android:text="afdjfaljdf"
                android:textColor="@color/colorWhite" />
            <TextView
                android:id="@+id/tv_accuracy"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:padding="@dimen/default_textview_padding"
                android:text="afdjfaljdf"
                android:textColor="@color/colorWhite" />
            <TextView
                android:id="@+id/tv_similarity"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:padding="@dimen/default_textview_padding"
                android:text="afdjfaljdf"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>